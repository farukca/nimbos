<!DOCTYPE html>
<html>
<head>
  <title>Nimbos</title>
  <%= stylesheet_link_tag    "nimbos/application", :media => "all" %>
  <%= javascript_include_tag "nimbos/application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="container">
	  <div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
    </div>
    <div id="user_nav">
      <% if user_signed_in? %>
        Logged in as <%= current_user.email %> at <%= current_patron %>
        <%= link_to "Log out", logout_path %>
      <% else %>
        <%= link_to "Sign up", signup_path %> or
        <%= link_to "log in", login_path %>
      <% end %>
    </div>
		<%= yield %>
  </div>
</body>
</html>
