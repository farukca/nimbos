<li class="in">
  <%= user_small_avatar(comment.user) %>
  <div class="message">
    <span class="arrow"></span>
    <%= link_to comment.user, nimbos.user_path(comment.user), class: "name" %>
    <span class="text-muted"><%= local_time_ago(comment.created_at) %></span>
    <span class="body"><%= comment.comment_text %></span>
  </div>
</li>