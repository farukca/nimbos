<div id="setup_address">
  
  <div class="row-fluid">
    <ul class="breadcrumb">
      <li><a href="#">Firma Bilgileri</a><span class="divider">>></span></li>
      <li class="active">Şube Bilgileri<span class="divider">>></span></li>
      <li><a href="#">Kullanıcı Bilgileri</a></li>
    </ul>
  </div>

  <div id="opform">
  <%= simple_form_for @patron, url: wizard_path, method: :put, validate: true, html: { class: "form-horizontal" } do |f| %>
    <%= f.error_notification %>
    <%= f.error :base %>
    <div class="pageBlock">

      <div class="row-fluid">

        <div class="page-header">
          <h4>Şube Bilgileri</h4>
        </div>
        <div class="row-fluid">
          <fieldset>
             <%= f.simple_fields_for :branches do |cf| %>
              <%= render 'branch_fields', :f => cf %>
            <% end %>
            <div class="form-actions">
              <%= link_to_add_fields t("branches.link.add_branch"), f, :branches %>
            </div>
          </fieldset>
          <div class="controls">
            <%= link_to "Bu Adımı Atla >>", next_wizard_path, :class => 'btn btn-danger' %>
            <%= f.button :submit, "Şube Bilgilerini Kaydet", :class => 'btn btn-info' %>
          </div>
        </div>

      </div>
    </div>

  <% end %>
  </div>
</div>
