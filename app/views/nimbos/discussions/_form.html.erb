<%= simple_form_for([@target, @discussion], :url => nimbos.discussions_path("#{@target.class.name}_id" => @target.id), validate: true, html: { class: "form-horizontal" }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :title, label: t("tickets.label.title"), hint: t("tickets.hint.title"), input_html: { class: "input-xxlarge" } %>
  <%= f.input :content, label: t("tickets.label.desc"), placeholder: t("tickets.placeholder.desc"), input_html: { rows: "6", class: "input-xxlarge" } %>

  <div class="form-actions">
    <%= f.submit "Start discussion", class: "btn btn-success" %>
    <a href='#' onclick='history.back();' class='btn'>Cancel</a>
  </div>
<% end %>
