<h1>Listing discussions</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Target type</th>
    <th>Target</th>
    <th>User</th>
    <th>Patron</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @discussions.each do |discussion| %>
  <tr>
    <td><%= discussion.title %></td>
    <td><%= discussion.content %></td>
    <td><%= discussion.target_type %></td>
    <td><%= discussion.target_id %></td>
    <td><%= discussion.user_id %></td>
    <td><%= discussion.patron_id %></td>
    <td><%= link_to 'Show', discussion %></td>
    <td><%= link_to 'Edit', edit_discussion_path(discussion) %></td>
    <td><%= link_to 'Destroy', discussion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

