<% if @counter.errors.present? %>
  toastr.error('<%= j error_messages_for(@counter) %>');
  $("#messages").show();
  $("#messages").html('<div id="flash_notice" class="alert alert-error"><%= j error_messages_for(@counter) %></div>');
  $("#messages").fadeOut(4000);
<% else %>
  $("#modalWindow").html("<%= escape_javascript(render 'nimbos/counters/form') %>");
  $("#modalWindow").modal();
<% end %>
jQuery(document).ready(function() {       
  App.initAjax();
});