<li id="Nimbos::Post_<%= post.id %>" class="media">
  <%= link_to user_small_avatar(post.user), nimbos.user_path(post.user), class: "pull-left" %>
  <div class="media-body">
    <div class="media-content">
      <%= sanitize(post.message) %>
    </div>
    <%#= render "shared/media_footer", object: post %>
    <%= render "nimbos/comments/commentable", object: post %>
  </div>
</li>