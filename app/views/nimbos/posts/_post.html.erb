<li id="Post_<%= post.id %>" class="media">
  <%= link_to user_small_avatar(post.user), nimbos.user_path(post.user), class: "pull-left" %>
  <div class="media-body">
    <div class="media-content">
      <%= link_to "#{post.target_name} - ", "#", title: "#{post.target_type}: #{post.target_name}" if post.target_id %>
      <%= link_to user_name(post.user), nimbos.user_path(post.user) %>:&nbsp;
      <%= sanitize(post.message) %>
      <%#= sanitize(auto_link(post.message)) %>

      <%#= link_to post.target_name, polymorphic_url(post.target), title: "#{post.target_type}: #{post.target_name}" if post.target_id %>
    </div>
    <div class="media-meta">
      <span class="sub-info"><%= post.created_at.to_s(:pretty) %></span>
      <% if post.comments.size == 0 %>
        <a href="#" class="replytopost" data-post-id="<%= post.id %>"><%= t("defaults.link.new_comment") %></a>
      <% end %>
    </div>
    <%= render "nimbos/comments/commentable", object: post %>
  </div>
</li>