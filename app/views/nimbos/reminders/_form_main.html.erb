<div class="row-fluid">
  <fieldset>
    <div class="row-fluid">
      <div class="span6">
        <%= f.input :title, label: t("companies.label.event_title") %>
        <%= f.input :start_date, label: t("companies.label.event_date") do %>
          <%= f.input_field :start_date, as: :string, class: "datepicker" %>
          <a id="reminder_scope_changer" href="#">it takes more than one day</a>
        <% end %>
        <div id="reminder_hour">
          <%= f.input :start_hour, as: :string, label: t("companies.label.event_date") %>
        </div>
        <div id="reminder_finish_date" class="slidingDiv">
          <%= f.input :finish_date, as: :string, label: t("companies.label.event_date"), input_html: {class: "datepicker" } %>
        </div>
      </div>
      <div class="span6">
        <%= f.input :description, label: t("companies.label.event_description"), input_html: { rows: "3" }  %>
      </div>
    </div>
    <%= f.input :remindfor_type, as: :hidden %>
    <%= f.input :remindfor_id, as: :hidden %>
  </fieldset>
</div>