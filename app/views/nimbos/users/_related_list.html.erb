<%= table_for objects, html: { class: "table table-bordered table-striped table-hover" } do -%>
  <% column title: t("users.label.name"), html: { th: { class: "col-md-2" } } do |user| %>
    <% link_to user.name, nimbos.user_path(user) %>
  <% end %>
  <% column :email, html: { th: { class: "col-md-2" } } %>
  <% column title: t("users.label.last_login_at"), html: { th: { class: "col-md-2" } } do |user| %>
    <% local_time(user.last_login_at) if user.last_login_at %>
  <% end %>
  <% column title: t("simple_form.labels.defaults.branch_id"), html: { th: { class: "col-md-2" } } do |user| %>
    <% branch_name(user.branch) if user.branch %>
  <% end %>
  <% column :user_status, title: t("simple_form.labels.defaults.status"), html: { th: { class: "col-md-1" } } %>
  <% column title: "", html: { th: { class: "col-md-1" } } do |user| %>
    <% link_to t("defaults.label.edit"), nimbos.edit_user_path(user) %>
  <% end %>
<% end %>