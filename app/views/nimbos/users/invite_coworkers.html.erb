<div class="row">

  <div class="col-md-12">
		<div class="page-header">
			<h4><%= t("users.label.invite_users") %></h4>
		</div>
  </div>

	<div class="col-md-6">
		<%= form_tag nimbos.create_coworkers_users_path, method: :put, class: "form-horizontal" do %>
      <div class="form-body">
			  <div class="control-group">
			  	<div class="controls">
			  	  <%= select_tag(:branch_id, options_for_select(Nimbos::Branch.all.map { |branch| [branch.name, branch.id] }), include_blank: false) %>
			  	  <label class="control-label">Seçtiğiniz şubede ki ekip arkadaşlarınızın mail adreslerini giriniz.<br>
			  	<span>Her şube için bu işlemi tekrar yapmalısınız.</span></label>
			  	</div>
			  </div>
				<label class="control-label">Enter mail addresses:</label>
	      <% for user in @users %>
	        <div class="control-group">
		        <div class="controls"><%= text_field_tag "user_emails[]", nil, class: "form-control placeholder-no-fix col-md-5", placeholder:  "Mail address" %></div>
	        </div>
	      <% end %>
      </div>
      <div class="form-actions">
        <%= submit_tag "Invite Co-workers", class: "btn btn-success" %> 
      </div>
		<% end %>
	</div>
	</div>
</div>