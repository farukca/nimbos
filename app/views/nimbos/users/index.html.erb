<div id="users_index" class="row">

  <%= render "shared/page_title", page_title: t("users.title.users"), page_small_title: "", model_name: "users", model_path: "nimbos/users" %>

  <div class="row inbox">
    <div class="col-md-3">
      <ul class="inbox-nav margin-bottom-10">
        <li class="compose-btn">
          <%= link_to nimbos.new_user_path, class: "btn green" do %>
            <i class="fa fa-edit"></i> <%= t("users.label.new_user") %>
          <% end %>
        </li>
        <li class="compose-btn">
          <%= link_to nimbos.invite_coworkers_users_path, class: "btn green" do %>
            <i class="fa fa-group"></i> <%= t("users.label.invite_users") %>
          <% end %>
        </li>
        <!--li class="inbox active">
          <a href="javascript:;" class="btn" data-title="Inbox">Inbox(3)</a>
          <b></b>
        </li>
        <li class="sent"><a class="btn" href="javascript:;"  data-title="Sent">Sent</a><b></b></li>
        <li class="draft"><a class="btn" href="javascript:;" data-title="Draft">Draft</a><b></b></li>
        <li class="trash"><a class="btn" href="javascript:;" data-title="Trash">Trash</a><b></b></li-->
      </ul>
    </div>
    <div class="col-md-9">
      <div class="inbox-header">
        <h1 class="pull-left"><%= t("users.title.users") %></h1>
        <%= render "shared/quick_search_form", model_name: "Nimbos::User" %>
      </div>

      <div class="inbox-content">
        <%= render "nimbos/users/related_list", objects: @users %>
        <%= link_to nimbos.invite_coworkers_users_path, class: "btn blue btn-block margin-bottom-20" do %>
          <i class="fa fa-group"></i> <%= t("users.label.invite_users") %>
        <% end %>
      </div>
    </div>
  </div>
</div>