<div id="Patron_#{patron.id}_profile_header" class="row">
  <div class="row">
    <div class="col-md-3">
      <%= link_to patron_logo, "#", :class => 'togglebutton', "data-placement" => "below",  "rel" => 'twipsy', "title" => "Resmi Değiştirmek için Tıklayınız", "data-href" => "#logo_change_div" %>
    </div>
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-8 profile-info">
          <h1><%= patron.name %></h1>
          <!--p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt laoreet dolore magna aliquam tincidunt erat volutpat laoreet dolore magna aliquam tincidunt erat volutpat.</p-->
          <ul class="list-inline">
            <li><i class="icon-envelope"></i> <%= mail_to patron.email, patron.email %></li>
            <li><i class="icon-phone"></i> <%= patron.tel %></li>
            <li><i class="icon-print"></i> <%= patron.fax %></li>
            <br>
            <li><i class="icon-map-marker"></i> <%= patron_address(patron) %></li>
          </ul>
        </div>
        <div class="col-md-4">
        </div>
      </div>
      <div class="row-fluid">
        <div id="logo_change_div" class="slidingDiv">
          <%= simple_form_for patron, remote: true, html: {multipart: true, class: 'form-inline'} do |f| %>
            <%= f.input :logo_cache, as: :hidden %>
            <%= f.input :logo, as: :file, label: false %>
            <%= f.submit "Firma Logosunu Değiştir", :class => "btn btn-success" %>
            <%= link_to "Vazgeç", "#", class: "togglebutton btn", "data-href" => "#logo_change_div" %>
            <%#if patron.logo? %>
              <%#= f.input :remove_logo, as: :check_boxes %><!--&nbsp;Resmi Sil-->
            <%# end %>
          <% end %>
        </div>
    </div>
  </div>
</div>