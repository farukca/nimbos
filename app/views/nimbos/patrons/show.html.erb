<div class="row">
  <div class="col-md-12">
    <h3 class="page-title">
      <%= t("patrons.title.patron_info") %> <small></small>
    </h3>
    <ul class="page-breadcrumb breadcrumb">
      <li class="btn-group">
        <%= render "actions", patron: @patron %>
      </li>
      <li><a href="#"><%= t("patrons.title.patron_info") %></a></li>
    </ul>
  </div>
</div>
<%= render "profile", patron: @patron %>
<% if @patron.logo_url ==  "/assets/patron.png" %>
  <div>
    <div class="portlet">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-comment"></i> Notification
        </div>
        <div class="tools">
          <a href="javascript:;" class="remove"></a>
        </div>
      </div>
      <div class="portlet-body">
        <blockquote>
        <p class="text-success">
          <%= t("simple_form.messages.patron.didnot_changed_company_logo") %>, 
          <%= link_to t("simple_form.helpers.patron.change_logo"), nimbos.edit_patron_path(@patron) %>
        </p>
        </blockquote>
      </div>
    </div>
  </div>
<% end %>