<h5><%= t("web.title.fill_all_fields_in_form") %></h5>
<div id="patron_form" class="row">
<%= simple_form_for @patron, html: {class: 'form-horizontal'}, validate: true do |f| %>
  <%= f.error_notification %>
  <%= f.error :base, error_method: :to_sentence %>

  <fieldset>
    <%= f.input :username, as: :hidden %>
    <%= f.input :name, label: t("web.label.company_name") %>
    <%= f.input :contact_name, label: t("web.label.name") %>
    <%= f.input :contact_surname, label: t("web.label.surname") %>
    <%= f.input :tel, label: t("web.label.phone") %>
    <%= f.input :email, label: t("web.label.email") %>
    <%= f.input :country_id do %>
      <%= f.select :country_id, Nimbos::Country.all.map { |c| ["#{c.name} +#{c.telcode}", c.code] }, include_blank: false, input_html: { class: "country_select" }, label: t("web.label.country"), selected: "TR" %>
    <% end %>
    <%#= f.input :employees, as: :select, label: t("web.label.employee_number"), collection: Patron.employee_ranks.map { |r| [r[1], r[0] ] }, include_blank: false %>
    <%#= f.input :language %>
  </fieldset>
  <div class="form-actions">
    <%= f.button :submit, t("web.label.signup"), class: 'btn btn-success', "data-loading-text" => "Processing..." %>
  </div>
<% end %>
</div>
