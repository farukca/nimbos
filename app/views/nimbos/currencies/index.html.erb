<div id="currencies" class="row-fluid">

  <div id="profile-header" class="profile-content row-fluid">
    <div class="span1">
      <%= image_tag("/assets/finance.png") %>
    </div>
    <div class="span11">
      <h5>Döviz Kurları</h5>
    </div>
  </div>

  <div class="row-fluid">
    <div id="currencies_menu" class="span6">
      <legend><%= t "Döviz İşlemleri" %></legend>
      <table class="table table-condensed">
        <tr><td><%= link_to "Yeni Döviz Oluştur", nimbos.new_currency_path %></td></tr>
        <tr><td><%= @tcmb.to_s %></td></tr>
      </table>
    </div>

    <div id="currencies_reports" class="span6">
        <legend><%= t "Döviz Raporları" %></legend>
        <table class="table table-condensed">
          <tr><td><%#= link_to "Döviz Listesi", nimbos.new_search_path(model: "currency") %></td></tr>
          <tr><td></td></tr>
        </table>
    </div>
  </div>

  <div id="currencies_list" class="row-fluid">
    <legend>Döviz Listesi</legend>
    <%= render "nimbos/currencies/related_list", objects: @currencies %>
  </div>

</div>