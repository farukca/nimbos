<div class="row-fluid">
	<div class="page-header">
		<h4><%= @listheader.name %>:<small><%= @listheader.code %></small></h4>
	</div>
	<div class="row-fluid">
    <table class="table table-condensed table-bordered">
    	<tr>
        <th>Kod</th>
        <th>Açıklama</th>
        <th>Liste Kodu</th>
        <th>i18n Kod</th>
    	</tr>
    	<%= render @listheader.listitems, as: :listitem %>
    </table>
	</div>
	<div class="row-fluid">
		<div class="btn-group pull-right">
			<%= link_to "Edit List", nimbos.edit_listheader_path(@listheader), class: "btn" %>
			<%= link_to "New List", nimbos.new_listheader_path, class: "btn" %>
			<%= link_to "Parameters List", nimbos.listheaders_path, class: "btn" %>
		</div>
	</div>
</div>