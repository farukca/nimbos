<div id="login_page" class="container">
  <div class="row">
    <div class="span6 columns">
      <div id="login_image" style="padding:20px;">
        <%#= image_tag "ff.jpg" %>
      </div>
      <div id="login_form">
        <%= simple_form_for @user, :url => nimbos.sessions_path, html: { class: "form-horizontal" } do |f| %>
          <fieldset>
            <%= f.input :email, input_html: { class: "input-medium" } %>
            <%= f.input :password, as: :password, input_html: { class: "input-medium" } %>
            <%#= f.input :remember_me, as: :check_box %>&nbsp;<%#= t("web.label.remember_me") %>
          </div>
          <div class="actions pull-right">
              <%= f.submit t("web.label.login"), :class => "btn btn-success" %>
              <%= link_to t("web.label.forgot_password"), nimbos.new_password_reset_path %>
          </div>
          </fieldset>
        <% end %>
      </div>
      <!--div id="signupnote">
        <p><%#= t("web.label.no_account_yet") %>&nbsp;<%#= link_to t("web.label.signup_for_free"), try_path%></p>
        <p><%#= t("web.label.are_you_freighter") %>&nbsp;<%#= link_to t("web.label.try_socialfreight"), try_path%></p>
      </div-->
    </div>
    <div class="span6 columns">
      <div id="login_roadmap">
        <%#= image_tag "cloud-go.jpg" %>
      </div>
    </div>
  </div>
</div>