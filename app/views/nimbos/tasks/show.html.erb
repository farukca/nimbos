<div id="Nimbos::Task_<%= @task.id %>" class="media">
  <%= link_to user_small_avatar(@task.cruser), nimbos.user_path(@task.cruser), class: "pull-left" %>
  <div class="media-body">
    <div class="media-heading">
      <h4><%= sanitize(@task.task_text) %></h4>
    </div>

    <div class="row" style="margin-top:20px;">
      <div class="col-md-12">
        <%= render "nimbos/comments/commentable", object: @task %>
      </div>
    </div>
  </div>
</div>