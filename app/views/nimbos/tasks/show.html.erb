<div class="row">
  <div class="col-md-12">
    <div class="inbox-header">
      <h4>
        <%= link_to nimbos.todolist_path(@task.todolist) do %>
          <i class="fa fa-tasks fa-2x"></i>  <%= @task.todolist.name %>
        <% end %>
      </h4>
    </div>
  </div>
</div>
<div id="Nimbos::Task_<%= @task.id %>" class="media">
  <%= link_to user_small_avatar(@task.cruser), nimbos.user_path(@task.cruser), class: "pull-left" %>
  <div class="media-body">
    <div class="media-heading">
      <h4><%= sanitize(@task.task_text) %></h4>
    </div>

    <div class="row" style="margin-top:20px;">
      <div class="col-md-12">
        <%= render "nimbos/comments/commentable", object: @task %>
      </div>
    </div>
  </div>
</div>