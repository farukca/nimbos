<div class="modal-dialog">
  <div class="modal-content">

    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
      <h4>Task assing page</h4>
    </div>

  	<%= simple_form_for [@todolist, @task], remote: true do |f| %>
      <div class="modal-body">
  	    <%= f.error_notification %>
  			<div class="row">
  			  <div class="col-md-12">
  			  	<%= f.input :task_text, as: :text %>
            <div class="row">
              <div class="col-md-6">
                <%= f.input :user_id, as: :select, collection: current_patron.users.all, include_blank: true, prompt: "Assing this task to" %>
              </div>
              <div class="col-md-6">
      			    <%= f.input :due_date, as: :string, input_html: { class: "datepicker" } %>
              </div>
            </div>
  			  </div>
        </div>
      </div>
      <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal" aria-hidden="true"><%= t("defaults.action.close") %></a>
        <%= f.submit t("defaults.action.send"), class: 'btn btn-success' %>
      </div>
  	<% end %>

  </div>
</div>